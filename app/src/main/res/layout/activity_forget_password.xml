<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#2B547E">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <EditText
            android:id="@+id/editTextEmailNeedRestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_reset_password"
            android:background="@drawable/rounded_borders"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/editTextEmailNeedRestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRestorePassWord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Send require"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@drawable/rounded_borders"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:backgroundTint="#02E433"/>

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Come back"
                android:textAllCaps="false"
                android:layout_below="@+id/buttonRestorePassWord"
                android:layout_weight="1"
                app:backgroundTint="#02E433"
                android:background="@drawable/rounded_borders"
                android:textColorHint="@color/white"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>