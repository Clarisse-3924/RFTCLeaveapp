<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:background="#2B547E">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarSearch"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#2E8B57"
        app:titleTextColor="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="@dimen/text_size_title_toolbar"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <View android:background="@color/gray"
        android:layout_width ="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:elevation="2dp"/>


    <TableRow>
        <Button
            android:id="@+id/btnAccountPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_edit_text_7dp"
            android:layout_marginBottom="@dimen/padding_edit_text_7dp"
            android:text="Change Password"
            android:paddingLeft="@dimen/padding_left_table_row"
            android:textSize="@dimen/text_size_fragment_personal"
            android:background="@drawable/rounded_borders"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_span="1"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_marginStart="@dimen/margin_top_10dp"
            android:layout_marginEnd="@dimen/margin_top_10dp"
            android:gravity="start" />
    </TableRow>

    <View
        android:layout_width ="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:elevation="2dp"/>

    <View android:background="@color/gray"
        android:layout_width ="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:elevation="2dp"/>

    <TableRow>
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_edit_text_7dp"
            android:layout_marginBottom="@dimen/padding_edit_text_7dp"
            android:text="Log out"
            android:background="@drawable/rounded_borders"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:paddingStart="@dimen/padding_left_table_row"
            android:textSize="@dimen/text_size_fragment_personal"
            android:layout_span="1"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_marginStart="@dimen/margin_top_10dp"
            android:layout_marginEnd="@dimen/margin_top_10dp"
            android:paddingLeft="@dimen/padding_left_table_row"
            android:gravity="start" />
    </TableRow>

    <View android:background="@color/gray"
        android:layout_width ="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:elevation="2dp"/>


</TableLayout>