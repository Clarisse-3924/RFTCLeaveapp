<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycounsille">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="sensor"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Drivers"
            android:label="Available Drivers"></activity>
        <activity android:name=".DriverRegister"
            android:label="Driver Register"/>
        <activity android:name=".StopCarForm"
            android:label="Stop Car Form"/>
        <activity android:name=".ShowDoctors"
            android:label="Show Doctors"/>
        <activity android:name=".Admin"
            android:label="Admin Dashoboard"/>
        <activity android:name=".EditProfileActivity"
            android:label="Edit Profile"/>
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:label="Register Activity"/>
        <activity android:name=".MoreInfoActivity"
            android:label="More Info"/>
        <activity android:name=".RestorePassword"
            android:label="Restore Password"/>
        <activity android:name=".ChangePassWordActivity"
            android:label="Change Password"/>
        <activity android:name=".ReStorePassWordActivity"
            android:label="Restore Password"/>
        <activity android:name=".LoginActivity"
            android:label="Login Activity"/>
        <activity android:name=".MainActivity"
            android:label="Available Drivers"/>
        <activity android:name=".SplashScreenActivity"
            android:label="RFTC LEAVE APP">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>